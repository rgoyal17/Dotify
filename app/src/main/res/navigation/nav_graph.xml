<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/settingsFragment">

    <fragment
        android:id="@+id/settingsFragment"
        android:name="edu.uw.rgoyal17.dotify.fragment.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <argument
            android:name="song"
            app:argType="edu.uw.rgoyal17.dotify.model.Song" />
    </fragment>
    <fragment
        android:id="@+id/profileFragment"
        android:name="edu.uw.rgoyal17.dotify.fragment.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="edu.uw.rgoyal17.dotify.fragment.AboutFragment"
        android:label="About"
        tools:layout="@layout/fragment_about" />
    <fragment
        android:id="@+id/statisticsFragment"
        android:name="edu.uw.rgoyal17.dotify.fragment.StatisticsFragment"
        android:label="Statistics"
        tools:layout="@layout/fragment_statistics" >
        <argument
            android:name="song"
            app:argType="edu.uw.rgoyal17.dotify.model.Song" />
    </fragment>
    <action
        android:id="@+id/action_global_statisticsFragment"
        app:destination="@id/statisticsFragment" />
</navigation>