<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editTextSongName"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="20dp"
        android:hint="Enter Song Name"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonChangeSong"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Song"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editTextSongName"
        app:layout_constraintTop_toTopOf="parent" />
    
    <ImageView
        android:id="@+id/imageViewDotify"
        android:layout_width="0dp"
        android:layout_height="320dp"
        android:src="@drawable/dotify"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/editTextSongName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        android:contentDescription="This is an image of our App Logo" />

    <TextView
        android:id="@+id/textViewSongTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Dotify Official Soundtrack"
        android:textSize="25dp"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/imageViewDotify"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textViewCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewSongTitle" />

    <ImageView
        android:id="@+id/imageViewPrevious"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:src="@drawable/previous"
        android:layout_marginTop="25dp"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCounter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintDimensionRatio="1:1" />

    <ImageView
        android:id="@+id/imageViewPlay"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:src="@drawable/play"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCounter"
        app:layout_constraintStart_toEndOf="@id/imageViewPrevious"
        app:layout_constraintDimensionRatio="1:1" />

    <ImageView
        android:id="@+id/imageViewNext"
        android:layout_width="100dp"
        android:layout_height="0dp"
        android:src="@drawable/next"
        android:layout_marginTop="25dp"
        app:layout_constraintTop_toBottomOf="@id/textViewCounter"
        app:layout_constraintStart_toEndOf="@id/imageViewPlay"
        app:layout_constraintDimensionRatio="1:1" />


</androidx.constraintlayout.widget.ConstraintLayout>